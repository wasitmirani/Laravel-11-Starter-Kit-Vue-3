{
    "compilerOptions": {
      "allowJs": true,                     // Allows JavaScript files to be compiled.
      "module": "ESNext",                  // Sets the module system to ESNext for future-proofing.
      "lib": ["ES2020", "DOM", "DOM.Iterable"], // Includes necessary libraries for modern JavaScript and DOM.
      "moduleResolution": "Node",          // Use Node-style module resolution.
      "target": "esnext",                  // Targets the latest ECMAScript version.
      "jsx": "preserve",                  // Keeps JSX as is for transformation by a build tool.
      "strict": true,                      // Enables all strict type-checking options.
      "esModuleInterop": true,             // Enables interoperability between CommonJS and ES Modules.
      "skipLibCheck": true,                // Skips type checking of declaration files.
      "forceConsistentCasingInFileNames": true, // Ensures consistent casing in file names.
      "noEmit": true,                      // Disables emitting files; only type-checking.
      "isolatedModules": true,             // Ensures that each file can be transpiled independently.
      "types": ["vite/client"]             // Includes types for Vite client.
    },
    "exclude": [
      "node_modules",                      // Excludes node_modules directory.
      "public"                             // Excludes public directory.
    ],
    "include": [
      "resources/ts/**/*.{ts,vue}",       // Includes all TypeScript and Vue files under resources/ts.
      "resources/ts/**/*.d.ts",            // Includes TypeScript declaration files.
      "resources/ts/app.ts",               // Includes a specific TypeScript file.
      "resources/ts/**/**/*.ts",           // Includes all TypeScript files under all subdirectories.
      "resources/ts/**/**/*.vue"           // Includes all Vue files under all subdirectories.
    ]
  }
  